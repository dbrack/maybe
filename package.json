{
  "name": "maybe",
  "version": "1.0.0",
  "description": "A TypeScript implementation of Haskells Maybe Monad",
  "private": true,
  "directories": {
    "example": "src/examples"
  },
  "scripts": {
    "test": "jest",
    "prettier": "prettier --write --single-quote --use-tabs src/**/*.ts examples/**/*.ts"
  },
  "author": "Dominik Brack <dominik.brack@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "21.1.9",
    "jest": "22.0.3",
    "prettier": "1.9.2",
    "typescript": "2.6.2",
    "ts-jest": "21.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
